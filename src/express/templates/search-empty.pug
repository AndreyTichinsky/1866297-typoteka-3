extends layout.pug

block content
  .wrapper
    include ./partials/navigation-header.pug
    main
      section.search-page
        .search-page__wrapper(class=(results.length === 0 ? "search-page__wrapper--empty" : ""))
          h1 Поиск
          .search.search-page__form
            form(action='/search' method='get' autocomplete="off")
              label
                input(type='text' placeholder='Что ищем?' name='query' value=query)
              button.search__button.button.button--transparent(type='submit') Найти
          p.search-page__empty Ничего не нашлось


